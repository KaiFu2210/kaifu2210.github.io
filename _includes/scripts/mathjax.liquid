{% if site.enable_math %}
  {% unless page.pseudocode %}
    <!-- MathJax -->
    <script type="text/javascript">
      window.MathJax = {
        tex: {
          tags: 'ams',
        },
      };
    </script>
    <script
      defer
      type="text/javascript"
      id="MathJax-script"
      src="{{ site.third_party_libraries.mathjax.url.js }}"
      integrity="{{ site.third_party_libraries.mathjax.integrity.js }}"
      crossorigin="anonymous"
    ></script>
